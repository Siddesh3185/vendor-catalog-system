<%- include('../partials/header', { title: 'Edit Contact' }) %>

<div class="page-header">
  <h1>Edit Contact</h1>
</div>

<div class="table-wrap" style="max-width:720px;margin:0 auto;">
  <form method="POST" action="/contacts/update/<%= contact ? contact.id : '' %>">
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="name" placeholder="Full name" required value="<%= contact ? contact.name : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="email" placeholder="Email" type="email" value="<%= contact ? contact.email : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="phone" placeholder="Phone" value="<%= contact ? contact.phone : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="role" placeholder="Role / Position" value="<%= contact ? contact.role : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="margin-bottom:12px">
      <textarea name="notes" placeholder="Notes" style="width:100%;padding:8px;border-radius:6px;border:1px solid #e6eef7" rows="4"><%= contact ? contact.notes : '' %></textarea>
    </div>
    <button class="btn" type="submit">Save Contact</button>
  </form>
</div>

<%- include('../partials/footer') %>
