<%- include('../partials/header', { title: 'Add Product' }) %>

<div class="page-header">
  <h1>Add Product</h1>
</div>

<div class="table-wrap" style="max-width:720px;margin:0 auto;">
  <form method="POST" action="/products/add">
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="name" placeholder="Product name" required style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="category" placeholder="Category" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="price" placeholder="Price" type="number" step="0.01" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="sku" placeholder="SKU" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="margin-bottom:12px">
      <textarea name="description" placeholder="Description" style="width:100%;padding:8px;border-radius:6px;border:1px solid #e6eef7" rows="4"></textarea>
    </div>
    <button class="btn" type="submit">Create Product</button>
  </form>
</div>

<%- include('../partials/footer') %>
