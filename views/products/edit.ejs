<%- include('../partials/header', { title: 'Edit Product' }) %>

<div class="page-header">
  <h1>Edit Product</h1>
</div>

<div class="table-wrap" style="max-width:720px;margin:0 auto;">
  <form method="POST" action="/products/update/<%= product ? product.id : '' %>">
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="name" placeholder="Product name" required value="<%= product ? product.name : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="category" placeholder="Category" value="<%= product ? product.category : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="price" placeholder="Price" type="number" step="0.01" value="<%= product ? product.price : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="sku" placeholder="SKU" value="<%= product ? product.sku : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="margin-bottom:12px">
      <textarea name="description" placeholder="Description" style="width:100%;padding:8px;border-radius:6px;border:1px solid #e6eef7" rows="4"><%= product ? product.description : '' %></textarea>
    </div>
    <button class="btn" type="submit">Save Product</button>
  </form>
</div>

<%- include('../partials/footer') %>
