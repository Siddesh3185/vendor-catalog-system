<%- include('../partials/header', { title: 'Edit Vendor' }) %>

<div class="page-header">
  <h1>Edit Vendor</h1>
  <div></div>
</div>

<div class="table-wrap" style="max-width:720px;margin:0 auto;">
  <form method="POST" action="/vendors/update/<%= vendor ? vendor.id : '' %>">
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="name" placeholder="Vendor name" required value="<%= vendor ? vendor.name : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="email" placeholder="Email" type="email" value="<%= vendor ? vendor.email : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="display:flex;gap:8px;margin-bottom:12px">
      <input name="phone" placeholder="Phone" value="<%= vendor ? vendor.phone : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
      <input name="website" placeholder="Website" value="<%= vendor ? vendor.website : '' %>" style="flex:1;padding:8px;border-radius:6px;border:1px solid #e6eef7">
    </div>
    <div style="margin-bottom:12px">
      <textarea name="notes" placeholder="Notes" style="width:100%;padding:8px;border-radius:6px;border:1px solid #e6eef7" rows="4"><%= vendor ? vendor.notes : '' %></textarea>
    </div>
    <button class="btn" type="submit">Save Changes</button>
  </form>
</div>

<%- include('../partials/footer') %>
